{% extends 'base_default.html.twig' %}

{% block title %} - Accueil{% endblock %}

{% block core %}
    <div class="content">
        <br><br>
        <center><h2>Nos derniers produits</h2></center>
        <br/>
        <div class="row text-center">
            {% for produit in produits %}

                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card">
                        <div class="parent">
                            <img class="card-img-top padding resize"
                                 src="{{ asset('upload_files/produits/' ~ produit.libelle ~ '.' ~ produit.idTypeImage.libelle) }}">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{ produit.idProduit.libelle }}</h5>
                            <h5>
                                {% if produit.idProduit.prixTemporaire is empty %}
                                    {{ produit.idProduit.prix }} &euro;
                                {% else %}
                                    <s>{{ produit.idProduit.prix }} &euro;</s>
                                    {{ produit.idProduit.prixTemporaire }} &euro;
                                {% endif %}
                            </h5>
                        </div>
                        <div class="card-footer">
                            <a class="card-text btn btn-primary btn-sm" href="/PPE_Projet/index.php?reference=' . $row['identifiant'] . '">Détails</a>&nbsp;';
                            if (!isset($_SESSION['identifiant'])) { // Si on ne dÃ©tecte pas de session alors on verra
                            les liens ci-dessous
                            echo '<a class="btn btn-success btn-sm" href="/PPE_Projet/compte/connexion.php">Ajouter au
                                panier</a>';
                            } else { // Sinon s'il y a une session alors on verra les liens ci-dessous
                            echo '<a class="btn btn-success btn-sm"
                                     href="/PPE_Projet/scripts/ajout_panier.php?reference= ' . $row['identifiant'] . '&pageprevious=index">Ajouter
                                au panier</a>';
                            }
                            ?>
                        </div>
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>
{% endblock %}
