{% extends 'base_default.html.twig' %}

{% block title %} - Connexion{% endblock %}

{% block core %}
    <br><br><br><br><br>
    <div class="container" style="position: relative;z-index:948;">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title mt-2 text-center">Se connecter</h4>
                    </header>
                    <article class="card-body">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <div class="form-group">
                                <label for="inputEmail" class="sr-only">Courriel</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                       class="form-control" placeholder="Courriel" required autofocus>
                            </div>

                            <div class="form-group">
                                <label for="inputPassword" class="sr-only">Mot de passe</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="********" required>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            {#Uncomment this section and add a remember_me option below your firewall to activate remember me
                            functionality.
                            See https://symfony.com/doc/current/security/remember_me.html#}

                            <div class="form-group">
                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-6 offset-lg-3">
                                    <button type="submit" class="btn btn-primary btn-block">Se connecter</button>
                                </div>
                            </div>
                        </form>
                    </article>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
