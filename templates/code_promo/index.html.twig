{% extends 'base.html.twig' %}

{% block title %}CodePromo index{% endblock %}

{% block body %}
    <h1>CodePromo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Actif</th>
                <th>Code</th>
                <th>Reduction</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for code_promo in code_promos %}
            <tr>
                <td>{{ code_promo.id }}</td>
                <td>{{ code_promo.actif ? 'Yes' : 'No' }}</td>
                <td>{{ code_promo.code }}</td>
                <td>{{ code_promo.reduction }}</td>
                <td>{{ code_promo.dateDebut ? code_promo.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ code_promo.dateFin ? code_promo.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('code_promo_show', {'id': code_promo.id}) }}">show</a>
                    <a href="{{ path('code_promo_edit', {'id': code_promo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('code_promo_new') }}">Create new</a>
{% endblock %}
