{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ utilisateur.id }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ utilisateur.actif ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ utilisateur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ utilisateur.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ utilisateur.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ utilisateur.telephone }}</td>
            </tr>
            <tr>
                <th>Date_naissance</th>
                <td>{{ utilisateur.dateNaissance ? utilisateur.dateNaissance|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Date_derniere_connexion</th>
                <td>{{ utilisateur.dateDerniereConnexion ? utilisateur.dateDerniereConnexion|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('utilisateur_index') }}">Retour à la liste</a>

    <a class="btn btn-primary" href="{{ path('utilisateur_edit', {'id': utilisateur.id}) }}">Éditer l'utilisateur</a>

    {{ include('utilisateur/_delete_form.html.twig') }}
{% endblock %}
