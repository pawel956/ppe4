{% extends 'base.html.twig' %}

{% block title %} - Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/bootstrap-datepicker.min.css') }}">
{% endblock %}

{% block body %}
    {% include "partials/navbar.html.twig" %}
    <br><br><br><br><br>
    <div class="container" style="position: relative;z-index:948;">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title mt-2 text-center">Inscription</h4>
                    </header>
                    <article class="card-body">
                        {{ form_start(registrationForm,  {'method': 'POST', 'attr': {'novalidate': 'novalidate'}}) }}

                        <div class="form-row">
                            <div class="col form-group">
                                {{ form_row(registrationForm.nom) }}
                            </div>
                            <div class="col form-group">
                                {{ form_row(registrationForm.prenom) }}
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col form-group">
                                {{ form_label(registrationForm.email) }}
                                {{ form_widget(registrationForm.email) }}
                                <div style="text-align: center">
                                    {{ form_help(registrationForm.email) }}
                                </div>
                            </div>
                            <div class="col form-group">
                                {{ form_row(registrationForm.telephone) }}
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col form-group">
                                {{ form_row(registrationForm.idGenre) }}
                            </div>
                            <div class="col form-group">
                                {{ form_row(registrationForm.dateNaissance) }}
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col form-group">
                                {{ form_row(registrationForm.plainPassword.first) }}
                            </div>
                            <div class="col form-group">
                                {{ form_row(registrationForm.plainPassword.second) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                {{ form_row(registrationForm.agreeTerms) }}
                            </div>
                        </div>

                        {{ form_rest(registrationForm) }}

                        <div class="form-group">
                            <div class="col-md-4 offset-md-4">
                                {{ form_label(registrationForm.submit) }}
                            </div>
                        </div>

                        {{ form_end(registrationForm) }}
                    </article>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/bootstrap-datepicker.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap-datepicker.fr.min.js') }}"></script>

    <script>
        $(document).ready(function () {
            $('.js-datepicker').datepicker({
                format: "dd/mm/yyyy",
                endDate: "-1d",
                language: "fr",
                orientation: "bottom auto",
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
{% endblock %}
